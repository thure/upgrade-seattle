<div class="onecolumn_container">
  <div class="onecolumn">

    {% if page.nation_sandbox_signup.content.size > 0 %}
    {{ page.nation_sandbox_signup.content }}
    {% endif %}

    <div align="center" class="one_column">
      <div class="form-wrap" align="left">
        <div class="form">

          {% if request.sorta_logged_in? %}

          <h2 class="headline">Hi {{ request.current_signup.name_or_email }}! Start your new nation.</h2>

          {% if request.logged_in? == false %}
          <div class="padtop text-content">
            If you're not {{ request.current_signup.name_or_email }}, <a href="{{ request.current_signup.logout_url }}">click here</a>.
          </div>
          {% endif %}

          {% else %}

          <h2 class="headline">Start your sandbox nation.</h2>

          {% endif %}

          {% form_for nation_sandbox_signup %}

          <div class="form_errors">{% error_messages_for nation_sandbox_signup %}</div>

          <div class="row-fluid">
            <div class="span6"><label for="nation_sandbox_signup_first_name">Your First Name</label>{% text_field "first_name", class:"text" %}</div>
            <div class="span6"><label for="nation_sandbox_signup_last_name">Your Last Name</label>{% text_field "last_name", class:"text" %}</div>
          </div>

          <div class="row-fluid">
            <div class="span6"><label for="nation_sandbox_signup_email">Your Email</label>{% email_field "email", class:"text" %}</div>
            <div class="span6"><label for="nation_sandbox_signup_phone">Your Phone Number</label>{% text_field "phone", class:"text" %}</div>
          </div>

          <div class="row-fluid">
            <div class="span6"><label for="nation_sandbox_signup_password">Choose your password</label>{% password_field "password", class:"text" %}</div>
            <div class="span6"><label for="nation_sandbox_signup_password_confirmation">Repeat password</label>{% password_field "password_confirmation", class:"text" %}</div>
          </div>


          {% if request.logged_in? and request.current_signup.has_password? %}
          <div class="row-fluid">
            <div class="span12">This password is for your personal administrator account on your sandbox nation.<br/> It is separate from your nationbuilder.com password.</div>
          </div>
          {% endif %}

          <div class="row-fluid padtopmore">
            <div class="span12"><label class="checkbox">{% check_box "accept_tos", class:"checkbox" %} I agree to the <a href="http://nationbuilder.com/tos" target="_blank">NationBuilder terms of service</a></label></div>
          </div>

          <div class="row-fluid">
            <div class="span12">
              {% submit_tag "Start your sandbox nation", class:"submit-button" %}
              <div class="form_submit"></div>
            </div>
          </div>

          {% endform_for %}

        </div>
      </div>
    </div>

  </div>
</div>